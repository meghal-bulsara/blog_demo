<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= prularize(@post.error.count, "error") %>Prevented this post from saving:</h2>
		<ul>
			<% @post.errors.full_message.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	<br>
	<br>

	<%= f.label :content, "Write Your Article Here" %><br>
	<%= f.text_area :content %>

	<br>
	<br>


	<%= f.submit %>
<% end %>